} ;

struct BITMAPFILEHEADER
{
	WORD    bfType; 
	DWORD   bfSize; 
	WORD    bfReserved1; 
	WORD    bfReserved2; 
	DWORD   bfOffBits; 
};

struct BITMAPINFOHEADER
{
	DWORD  biSize; 
	LONG   biWidth; 
	LONG   biHeight; 
	WORD   biPlanes; 
	WORD   biBitCount ;
	DWORD  biCompression; 
	DWORD  biSizeImage; 
	LONG   biXPelsPerMeter ;
	LONG   biYPelsPerMeter; 
	DWORD  biClrUsed; 
	DWORD  biClrImportant; 
};

struct BITMAPINFO
{
	BITMAPINFOHEADER	bmiHeader ;
	RGBQUAD			bmiColors[256] ;
} ;


struct BITMAP256_SAMPLE
{
