	LONG    lfWeight;
	BYTE    lfItalic;
	BYTE    lfUnderline;
	BYTE    lfStrikeOut;
	BYTE    lfCharSet;
	BYTE    lfOutPrecision;
	BYTE    lfClipPrecision;
